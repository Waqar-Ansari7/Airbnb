<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3 m">Signup</h2> 
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-lable "><b>Username</b></label>
                    <input type="text" name="username" id="username" placeholder="Enter username" class="form-control"
                        required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-lable "><b>Email</b></label>
                    <input type="email" name="email" id="email" placeholder="Enter your email" class="form-control"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-lable "><b>Password</b></label>
                    <input type="password" name="password" id="password" placeholder="Enter your password"
                        class="form-control" required>
                </div>
                <button class="btn btn-success"  style="padding: 0.3rem 1.5rem 0.3rem 1.5rem;">SignUp</button>

            </form>
        </div>
    </div>